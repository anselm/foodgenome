
<h1>Please submit your email address and we will send you an invite.</h1>

<%= error_messages_for :user %>
<% form_for(:user, :url => "/invite", :html => { :multipart => true } ) do |f| -%>

<p><label for="name">Name</label><br/>
<%= f.text_field :name %></p>

<p><label for="email">Email</label><br/>
<%= f.text_field :email %></p>

<p><%= submit_tag 'Invite me!' %></p>
<% end -%>
